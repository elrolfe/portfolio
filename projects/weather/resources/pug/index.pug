doctype html
html(lang="en")
    head
        title Eric Rolfe's Portfolio - Local Weather Project
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/weather-icons/2.0.10/css/weather-icons.min.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        link(rel="stylesheet", href="/weather/css/style.css")
        script
            include ../../../../resources/js/gaScript.js    
    body
        .container
            h1.text-center Current Weather for <span id="location">Unknown Location</span>
            .loading
                p.text-center: img(src="/weather/img/loading.gif")
                h4.text-center Loading...
            .weather
                p.text-center: span#conditions: i.wi.wi-na
                p.text-center#conditions-text
                p.text-center <span id="temp-value-f" class="fahrenheit"><i class="wi wi-fahrenheit"></i></span><span id="temp-value-c" class="celsius"><i class="wi wi-celsius"></i></span>
                .switch
                    input#temp-scale(type="checkbox")
                    label(for="temp-scale")
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script(src="/weather/js/weather.js")